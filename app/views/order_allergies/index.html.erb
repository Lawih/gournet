<h1>Order Allergies</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Allergie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_allergies.each do |order_allergy| %>
      <tr>
        <td><%= order_allergy.order %></td>
        <td><%= order_allergy.allergie %></td>
        <td><%= link_to 'Show', order_allergy %></td>
        <td><%= link_to 'Edit', edit_order_allergy_path(order_allergy) %></td>
        <td><%= link_to 'Destroy', order_allergy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

