<!DOCTYPE html>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<html>
  <head>
    <title>Gournet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <p></p>
    <div class="banner" align="center">
    <%= link_to t('.home'), root_path, class: "btn btn-default" %>
    <%= link_to t('.about_us'), static_pages_about_us_path, class: "btn btn-default" %>
    <% if user_signed_in? %>
        <%= link_to t('.user') + ": " + current_user.username,root_path, class: "btn btn-default"%>
        <%= link_to t('.edit_profile'), edit_user_registration_path, class: "btn btn-default" %>
        <%= link_to t('.log_out'), destroy_user_session_path, method: :delete, class: "btn btn-default" %>
    <%else%>
    <%= link_to t('.log_in'), new_user_session_path, class: "btn btn-default" %>
    <%= link_to t('.sign_up'), new_user_registration_path, class: "btn btn-default"%>
    <% end%>
    </div>
    <center>
    <div class="notice"><%= notice %></div>
  	<div class="alert"><%= alert %></div>
    </center>
  </head>

  <body>
    <%= yield %>
    <center>
      <br>
    <p>
      <%= link_to_unless I18n.locale == :en, "English", locale: :en %>
      |
      <%= link_to_unless I18n.locale == :es, "Spanish", locale: :es %>
    </p>
    </center>
  </body>
  <p ALIGN=center>Copyright 2016</p>
</html>
