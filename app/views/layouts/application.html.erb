<!DOCTYPE html>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<html>
  <head>
    <title>Gournet</title>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <%= javascript_include_tag :modernizr %>

    <%=stylesheet_link_tag "https://fonts.googleapis.com/css?family=Arvo:400,700"%>
    <%=stylesheet_link_tag "https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic"%>

   <%= csrf_meta_tags %>

    <!-- NavBar-->
      <nav class="navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"> GourNet </a>
        </div>

         <div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
           <ul class="nav navbar-nav">

            <li class="menuItem"><a href="<%= chefs_path %>">Chefs</a></li>
            <li class="menuItem"><a href="<%= dishes_path%>"><%=t('.dishs')%></a></li>
            <li class="menuItem"><a href="/#screen"><%=t('.your_order')%></a></li>
            <li class="menuItem"><a href="<%=static_pages_about_us_path%>"><%=t('.about_us')%></a></li>
            <li class="menuItem"><a href="<%=new_contact_path%>"><%=t('.contact_us')%></a></li>
             <% if user_signed_in? %>
                <li class="menuItem btn-info">
                <a tabindex="0" data-toggle="dropdown" data-submenu="" aria-expanded="true">
                  <%=current_user.username%><span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li class="dropdown-submenu"><%= link_to t('.edit_profile'), edit_profile_path%></li>
                  <li class="dropdown-submenu"><%= link_to t('.change_your_password'), edit_user_registration_path%></li>
                  <li class="divider"></li>
                  <li class="menuItem btn-danger"><%= link_to t('.log_out'), destroy_user_session_path, method: :delete%></li>
                </ul>
                </li>
            <%else%>
                <li class="menuItem"><%= link_to t('.sign_in'), new_user_session_path%></li>
                <li class="menuItem" ><%= link_to t('.sign_up'), new_user_registration_path%></li>
            <% end%>
           </ul>
         </div>
       </div>
     </nav>
     <!-- NavBar END-->

    <!--
    <div class="notice"><%= notice %></div>
    <div class="alert"><%= alert %></div>
    -->
    </center>
  </head>

  <body>
    <%= yield %>
  </body>
  <footer>
      <center>
          <br>
          <p>
            <%= link_to_unless I18n.locale == :en, "English", locale: :en %>
            <%= link_to_unless I18n.locale == :es, "Spanish", locale: :es %>
          </p>
          <p> Copyright 2016</p>
          <br>
      </center>
  </footer>
</html>
