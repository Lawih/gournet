<!DOCTYPE html>
<html>
  <head>
    <title>Gournet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <p></p>
    <div class="banner" align="center">
    <%= link_to t('home'), root_path, class: "btn btn-default" %>
    <% if user_signed_in? %>
        <%= link_to current_user.email,root_path, class: "btn btn-default"%>

        <%= link_to t('edit_profile'), edit_user_registration_path, class: "btn btn-default" %>
        <%= link_to t('logout'), destroy_user_session_path, method: :delete, class: "btn btn-default" %>          
    <%else%>
    <%= link_to t('login'), new_user_session_path, class: "btn btn-default" %>
    <%= link_to t('signin'), new_user_registration_path, class: "btn btn-default"%>
    <% end%>
    </div>
    <div class="notice"><%= notice %></div>
	<div class="alert"><%= alert %></div>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
