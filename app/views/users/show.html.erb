<p id="notice">
  <%= notice %>
</p>
<div class="container">
  <div class="col-md-3" align="center">

    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="img-div"> <img src="<%=current_user.picture%>" class="img-circle"></div>
        <h3>
          <%= current_user.username %>
        </h3>
      </div>
      <div class="panel-body">
        <h4>
          <%= current_user.name unless current_user.name.blank? %>
            <%= current_user.lastname unless current_user.lastname.blank? %>
        </h4>
        <h4>
          <%= current_user.email unless current_user.email.blank? %>
        </h4>
        <h4>
          <%= current_user.birthday unless current_user.birthday.blank? %>
        </h4>
        <h4>
          <%= current_user.category unless current_user.category.blank? %>
        </h4>
        <h4>
          <%= current_user.type unless current_user.type.blank? %>
        </h4>
        <h4>
          <%= current_user.bio unless current_user.bio.blank? %>
        </h4>
      </div>
    </div>
  </div>

  <div class="col-md-9" align="center">
    <div class="col-md-12">
      <b><font SIZE=4 COLOR="#DC768C">Tus chefs  favoritos </font></b></br>
      <% @followings.each do |following| %>
        <%if following.user == current_user%>
          <div class="col-md-2">
            <div class="img-face">
              <img src="<%=following.chef.picture%>" class="img-circle">
            </div>
            <a href= "<%= chef_path(following.chef) %>" ><h5><%= following.chef.username %></h5></a>
          </div>
        <%end%>
      <% end %>
    </div>

    <div class="col-md-12">
      <b><font SIZE=4 COLOR="#DC768C">Tus platos guardados </font></b></br>
      <% @favorite_dishes.each do |favorite_dish| %>
        <div class="col-md-2">
          <a href= "<%= dish_path(favorite_dish.dish) %>" ><%= favorite_dish.dish.name %></a> de
          <%= favorite_dish.dish.chef.username %>
        </div>
      <% end %>
    </div>
      </br></br></br>
      <div class="col-md-12">
        <b><font SIZE=4 COLOR="#DC768C">Tus amigos de Facebook en GourNet </font></b></br>
        <% friends = current_user.friends %>
        <%  friends.each do |f|%>
          <div class="col-md-2">
            <div class="img-face">
              <img src="<%=f['picture']['data']['url']%>" class="img-circle">
            </div>
            <h5><%= f['name'] %></h5>
          </div>
        <% end %>
      </div>
  </div>
</div>
