<p id="notice"><%= notice %></p>
  <div class="container">
    <div class="col-md-3" align="center">

      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="img-div"> <img src="<%=@user.picture%>" class="img-circle"></div>
          <h3><%= @user.username %></h3>
        </div>
        <div class="panel-body">
            <h4><%= @user.name unless @user.name.blank? %>
            <%= @user.lastname unless @user.lastname.blank? %></h4>
            <h4><%= @user.email unless @user.email.blank? %></h4>
            <h4><%= @user.birthday unless @user.birthday.blank? %></h4>
            <h4><%= @user.category unless @user.category.blank? %></h4>
            <h4><%= @user.type unless @user.type.blank? %></h4>
            <h4><%= @user.bio unless @user.bio.blank? %></h4>
        </div>
      </div>
    </div>
</div>
