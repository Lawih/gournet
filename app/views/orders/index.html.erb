<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Dish</th>
      <th>Delivery person</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Comment</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.username %></td>
        <td><%= order.offer.dish.name %></td>
        <td><%= order.delivery_person %></td>
        <td><%= order.amount %></td>
        <td><%= order.date %></td>
        <td><%= order.comment %></td>
        <td><%= order.status %></td>
        <td><%= link_to t('show'), order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

