<div class="col-md-12" >
  <div class="col-md-12" >
    <h3><a href= "<%= dish_path(dish) %>" class="link"><%= dish.name %></a></h3>
    <% if chef != nil%>
      <h4><a href= "<%= chef_path(chef) %>" class="link"><%= chef.username %></a></h4>
    <%end%>
  </div>
  </br>
  </br>
  <div class="col-md-12">
    <div class="col-md-3" >
      <div class="imgdish-div">
        <img src="<%=dish.picture%>" class="img-circle">
      </div>
    </div>
    <div class="col-md-3" ><b><%= t("activerecord.attributes.dish.score") %>: </b><%= dish.score %></div>
    <div class="col-md-3" ><b><%= t("activerecord.attributes.dish.price") %>:</b> $<%= dish.price %></div>
    <div class="col-md-3" ><b><%= t("activerecord.attributes.dish.calories") %>: </b><%= dish.calories %></div>
    <div class="col-md-9" ><b><%= t("activerecord.attributes.dish.description") %>: </b><%= dish.description %></div>
    <div class="col-md-9" >
        <%= link_to "<button class='btn btn-embossed btn-primary' >Editar</button>".html_safe, edit_dish_path(dish) if policy(dish).edit? %>
        <%= link_to 'Eliminar', dish, :class => "btn btn-embossed btn-primary ", method: :delete, data: { confirm: 'Are you sure?' } if policy(dish).destroy? %>
    </div>
  </div>




</div>
