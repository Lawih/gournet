<div class=col-md-12 >
  <div class=col-md-12 >
    <h3>
      <% if chef != nil%>
        <a href= "<%= chef_path(chef) %>"><%= chef.username %></a> <%= divide %>
      <%end%>
    <a href= "<%= dish_path(dish) %>"><%= dish.name %></a></h3></div>
  </br>
  </br>
  <div class=col-md-3 >
    <div class="imgdish-div">
      <img src="<%=dish.picture%>" class="img-circle">
    </div>
  </div>
  <div class=col-md-9 >
    <div class=col-md-12 ><b>Description: </b><%= dish.description %></div>
    <div class=col-md-4 >Score: <%= dish.score %></div>
    <div class=col-md-4 >Price:  <%= dish.price %></div>
    <div class=col-md-4 >Calories: <%= dish.calories %></div>
    <div class=col-md-12 >
      <% if viewmore == true%><%= link_to "<button class='btn btn-embossed btn-primary' >Ver mas</button>".html_safe, dish %><%end%>
      <%= link_to "<button class='btn btn-embossed btn-primary' >Editar</button>".html_safe, edit_dish_path(dish) if policy(dish).edit?%>
      <%= link_to "<button class='btn btn-embossed btn-primary' >Eliminar</button>".html_safe, dish, method: :delete, data: { confirm: 'Are you sure?' } if policy(dish).destroy? %>
    </div>
  </div>
</div>
