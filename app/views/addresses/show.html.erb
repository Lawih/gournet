<div class="container" align="Center">

  <script src="//maps.google.com/maps/api/js?key=[your API key]"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

  <p id="notice"><%= notice %></p>
  <p class="lead" align="Center" style="margin-top:0">

      <strong>Nombre:</strong>
      <%= @address.name %>
      <br>

      <strong>Direcci√≥n:</strong>
      <%= @address.address %>
      <br>

      <strong>Latitud:</strong>
      <%= @address.latitude %>
      <br>

      <strong>Longitud:</strong>
      <%= @address.longitude %>
       <br>

      <%= link_to 'Editar', edit_address_path(@address),class:"btn  btn-lg mybutton_cyano wow fadeIn" %>
      <%= link_to 'Atras', addresses_path,class:"btn  btn-lg mybutton_cyano wow fadeIn" %>
    </p>

  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>

  <script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": 0,
        "lng": 0,
        "picture": {
          "url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
          "width":  32,
          "height": 32
        },
        "infowindow": "hello!"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
  </script>
</div>
